<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.googleanalytics.demo.MainActivity">

    <include layout="@layout/app_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click on each button to see the appropriate tracking on Google Analytics"
        android:textColor="#b4b4b4"/>

    <TextView
        android:id="@+id/btnActivityTracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/primaryColorDark"
        android:gravity="center"
        android:padding="20dp"
        android:text="Second Screen"
        android:textColor="#151414"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/btnEventTracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/primaryColorDark"
        android:gravity="center"
        android:padding="20dp"
        android:text="Track Event"
        android:textColor="#151414"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/btnExceptionTracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/primaryColorDark"
        android:gravity="center"
        android:padding="20dp"
        android:text="Track Exception"
        android:textColor="#151414"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/btnCrashTracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/primaryColorDark"
        android:gravity="center"
        android:padding="20dp"
        android:text="Track App Crash"
        android:textColor="#151414"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/btnFragmentTracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/primaryColorDark"
        android:gravity="center"
        android:padding="20dp"
        android:text="Fragment Tracking"
        android:textColor="#151414"
        android:textSize="18sp" />


    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
